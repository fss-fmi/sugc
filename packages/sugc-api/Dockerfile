# Run the container with `docker run -p 3000:3000 -t sugc-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system sugc-api && \
          adduser --system -G sugc-api sugc-api

COPY dist/packages/sugc-api sugc-api
RUN chown -R sugc-api:sugc-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix sugc-api --omit=dev -f install

CMD [ "node", "sugc-api" ]
